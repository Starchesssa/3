
name: Run Unusual_duration.py

on:
  workflow_dispatch:

permissions:
  contents: write  # needed to push changes

jobs:
  run-unusual-duration:
    runs-on: ubuntu-latest

    steps:
      - name: â¬‡ï¸ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸ Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: ğŸ“¦ Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install requests isodate

      - name: ğŸš€ Run Unusual_duration.py
        env:
          YOUTUBE_API: ${{ secrets.YOUTUBE_API }}
        run: |
          python Unusual_duration.py

      - name: âœ… Commit & Push Duration Files
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"
          git remote set-url origin https://x-access-token:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git

          # Add the generated duration files
          git add Unuusual_memory/DURATION/

          if git diff --cached --quiet; then
            echo "ğŸŸ¡ No changes to commit."
          else
            git commit -m "ğŸ¤– Update durations via Unusual_duration.py"
            git push
            echo "âœ… Changes committed and pushed."
          fi
